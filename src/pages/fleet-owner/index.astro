---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Fleet Owner Dashboard | Falcon Fleet 360">
    <div slot="head">
        <style>
            .dashboard-layout {
                display: flex;
                min-height: 100vh;
            }
            
            .sidebar {
                width: 280px;
                background: var(--bg-dark);
                color: white;
                padding: 32px 0;
                position: fixed;
                height: 100vh;
                overflow-y: auto;
            }
            
            .sidebar-brand {
                padding: 0 24px 32px;
                font-weight: 800;
                font-size: 1.4rem;
                color: #fff;
                display: flex;
                align-items: center;
                gap: 10px;
            }
            
            .nav-group {
                margin-bottom: 24px;
            }
            
            .nav-label {
                padding: 0 24px 10px;
                font-size: 11px;
                font-weight: 700;
                text-transform: uppercase;
                color: #64748B;
                letter-spacing: 1px;
            }
            
            .nav-link {
                padding: 12px 24px;
                display: flex;
                align-items: center;
                gap: 12px;
                color: #E2E8F0;
                text-decoration: none;
                font-size: 0.9rem;
                font-weight: 600;
                opacity: 0.7;
                transition: 0.2s;
                border-right: 4px solid transparent;
            }
            
            .nav-link:hover, .nav-link.active {
                opacity: 1;
                background: rgba(63, 154, 174, 0.1);
                color: #fff;
            }
            
            .nav-link.active {
                border-right-color: var(--brand-primary);
            }
            
            .main-content {
                margin-left: 280px;
                flex: 1;
                padding: 32px;
                background: var(--bg-body);
            }
            
            .dashboard-header {
                margin-bottom: 32px;
            }
            
            .dashboard-header h1 {
                font-size: 2rem;
                font-weight: 800;
                margin-bottom: 8px;
            }
            
            .dashboard-header p {
                color: var(--text-muted);
            }
            
            .kpi-grid {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
                gap: 24px;
                margin-bottom: 32px;
            }
            
            .kpi-card {
                background: var(--bg-card);
                padding: 24px;
                border-radius: var(--radius-lg);
                box-shadow: var(--shadow-card);
                border: 1px solid rgba(0,0,0,0.04);
            }
            
            .kpi-label {
                font-size: 0.75rem;
                font-weight: 700;
                text-transform: uppercase;
                color: var(--text-muted);
                letter-spacing: 0.5px;
                margin-bottom: 8px;
            }
            
            .kpi-value {
                font-size: 2rem;
                font-weight: 800;
                color: var(--brand-primary);
                margin-bottom: 8px;
            }
            
            .kpi-change {
                font-size: 0.875rem;
                font-weight: 600;
            }
            
            .kpi-change.positive {
                color: var(--success);
            }
            
            .kpi-change.negative {
                color: var(--danger);
            }
        </style>
    </div>

    <div class="dashboard-layout">
        <aside class="sidebar">
            <div class="sidebar-brand">
                <i class="fas fa-falcon"></i>
                <span>FALCON FLEET</span>
            </div>
            
            <div class="nav-group">
                <div class="nav-label">Dashboard</div>
                <a href="/fleet-owner" class="nav-link active">
                    <i class="fas fa-tachometer-alt"></i>
                    Overview
                </a>
            </div>
            
            <div class="nav-group">
                <div class="nav-label">Assets</div>
                <a href="/fleet-owner/assets" class="nav-link">
                    <i class="fas fa-truck"></i>
                    Fleet Assets
                </a>
                <a href="/fleet-owner/compliance" class="nav-link">
                    <i class="fas fa-shield-alt"></i>
                    Compliance
                </a>
            </div>
            
            <div class="nav-group">
                <div class="nav-label">Business</div>
                <a href="/fleet-owner/bids" class="nav-link">
                    <i class="fas fa-gavel"></i>
                    Bids & Contracts
                </a>
                <a href="/fleet-owner/financials" class="nav-link">
                    <i class="fas fa-chart-line"></i>
                    Financials
                </a>
                <a href="/fleet-owner/feedback" class="nav-link">
                    <i class="fas fa-star"></i>
                    Feedback
                </a>
            </div>
        </aside>

        <main class="main-content">
            <div class="dashboard-header">
                <h1>Fleet Owner Dashboard</h1>
                <p>High-level fleet performance and business metrics.</p>
            </div>

            <div class="kpi-grid">
                <div class="kpi-card">
                    <div class="kpi-label">Total Assets</div>
                    <div class="kpi-value">52</div>
                    <div class="kpi-change positive">↑ 3 this month</div>
                </div>
                
                <div class="kpi-card">
                    <div class="kpi-label">Fleet Utilization</div>
                    <div class="kpi-value">87.3%</div>
                    <div class="kpi-change positive">↑ 2.1% from last month</div>
                </div>
                
                <div class="kpi-card">
                    <div class="kpi-label">Monthly Revenue</div>
                    <div class="kpi-value">$428K</div>
                    <div class="kpi-change positive">↑ 12% from last month</div>
                </div>
                
                <div class="kpi-card">
                    <div class="kpi-label">ROI</div>
                    <div class="kpi-value">18.7%</div>
                    <div class="kpi-change positive">↑ 1.2% from last quarter</div>
                </div>
            </div>

            <div class="card">
                <h3 style="margin-bottom: 16px;">Business Overview</h3>
                <p>Fleet performance, revenue metrics, and business insights will be displayed here.</p>
            </div>
        </main>
    </div>

    <script client:load>
        console.log('Fleet Owner Dashboard loaded');
    </script>
</Layout>
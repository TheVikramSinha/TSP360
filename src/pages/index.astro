---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Falcon Fleet | 360° Integrated Logistics">
    <div slot="head">
        <style>
            /* Page Specific Styles */
            .gateway-body {
                background: linear-gradient(135deg, var(--nav-bg) 0%, #0f172a 100%);
                display: flex;
                align-items: center;
                justify-content: center;
                min-height: 100vh;
                color: var(--text-white);
            }

            .gateway-card {
                background: var(--card-bg);
                border-radius: 16px;
                width: 100%;
                max-width: 900px;
                display: grid;
                grid-template-columns: 1fr 1.2fr;
                overflow: hidden;
                box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
                color: var(--text-main);
            }

            .gateway-visual {
                background: var(--brand-primary);
                padding: 60px;
                display: flex;
                flex-direction: column;
                justify-content: center;
                color: white;
                position: relative;
                overflow: hidden;
            }

            .gateway-visual::after {
                content: "";
                position: absolute;
                width: 200%;
                height: 200%;
                top: -50%;
                left: -50%;
                background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            }

            .gateway-content {
                padding: 60px;
                background: white;
            }

            .logo-area {
                font-size: 2.5rem;
                font-weight: 800;
                margin-bottom: 20px;
                display: flex;
                align-items: center;
            }

            .logo-area i {
                margin-right: 15px;
                color: white;
            }

            .persona-grid {
                display: grid;
                grid-template-columns: 1fr 1fr;
                gap: 16px;
                margin-top: 30px;
            }

            .persona-btn {
                border: 2px solid var(--border-color);
                padding: 20px;
                border-radius: var(--radius);
                cursor: pointer;
                transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
                display: flex;
                flex-direction: column;
                align-items: center;
                text-align: center;
                background: transparent;
            }

            .persona-btn i {
                font-size: 1.5rem;
                margin-bottom: 12px;
                color: var(--text-muted);
            }

            .persona-btn span {
                font-weight: 700;
                font-size: 0.9rem;
                color: var(--text-main);
            }

            .persona-btn p {
                font-size: 0.75rem;
                color: var(--text-muted);
                margin-top: 4px;
            }

            .persona-btn:hover {
                border-color: var(--brand-primary);
                background: var(--body-bg);
                transform: translateY(-3px);
            }

            .persona-btn.active {
                border-color: var(--brand-primary);
                background: var(--info-bg);
                box-shadow: 5px 5px 8px #888888;
            }

            .persona-btn.active i {
                color: var(--brand-primary);
            }

            .login-btn {
                width: 100%;
                margin-top: 40px;
                padding: 15px;
                font-size: 1rem;
                letter-spacing: 0.5px;
            }

            .version-tag {
                position: absolute;
                bottom: 20px;
                left: 60px;
                font-size: 0.8rem;
                opacity: 0.7;
            }
        </style>
    </div>

    <body class="gateway-body">
        <div class="gateway-card">
            <div class="gateway-visual">
                <div class="logo-area">
                    <i class="fas fa-falcon"></i>
                    <span>FALCON<br>FLEET</span>
                </div>
                <h2 style="font-weight: 400; opacity: 0.9;">The 360° Logistics Standard.</h2>
                <p style="margin-top: 20px; font-size: 0.9rem; opacity: 0.8; line-height: 1.6;">
                    Unifying Sales, Operations, Finance, and Fleet Safety into a single source of truth.
                </p>
                <div class="version-tag">v2.0 Enterprise Release</div>
            </div>

            <div class="gateway-content">
                <h3 style="margin-bottom: 8px;">Welcome</h3>
                <p style="color: var(--text-muted); font-size: 0.9rem;">Select your persona to enter the cockpit.</p>

                <div class="persona-grid">
                    <button class="persona-btn" onclick="selectPersona('Admin', this)">
                        <i class="fas fa-shield-alt"></i>
                        <span>Super Admin</span>
                        <p>CRM & System Health</p>
                    </button>

                    <button class="persona-btn" onclick="selectPersona('Owner', this)">
                        <i class="fas fa-chart-line"></i>
                        <span>Fleet Owner</span>
                        <p>ROI & Asset Strategy</p>
                    </button>

                    <button class="persona-btn" onclick="selectPersona('Manager', this)">
                        <i class="fas fa-truck-loading"></i>
                        <span>Fleet Manager</span>
                        <p>Live Ops & Uptime</p>
                    </button>

                    <button class="persona-btn" onclick="selectPersona('Shipper', this)">
                        <i class="fas fa-box-open"></i>
                        <span>Shipper</span>
                        <p>Loads & Tracking</p>
                    </button>
                </div>

                <button class="btn btn-primary login-btn" onclick="handleLogin()">
                    Access Dashboard <i class="fas fa-arrow-right" style="margin-left: 8px;"></i>
                </button>
            </div>
        </div>
    </body>

    <script client:load>
        let selectedRole = '';

        function selectPersona(role, element) {
            selectedRole = role;
            
            // UI Feedback
            document.querySelectorAll('.persona-btn').forEach(btn => btn.classList.remove('active'));
            element.classList.add('active');
        }

        function handleLogin() {
            if (!selectedRole) {
                alert('Please select a persona to continue.');
                return;
            }
        
            let targetPage = '';
            switch(selectedRole) {
                case 'Admin': targetPage = '/tsp-admin/admin-dashboard'; break;
                case 'Owner': targetPage = '/fleet-owner'; break;
                case 'Manager': targetPage = '/fleet-manager/dashboard'; break;
                case 'Shipper': targetPage = '/shipper/dashboard'; break;
            }

            // Simulate loading
            const btn = document.querySelector('.login-btn');
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Authenticating...';
            
            console.log("Navigating to:", targetPage); // For debugging

            setTimeout(() => {
                window.location.href = targetPage;
            }, 1000);
        }
    </script>
</Layout>
